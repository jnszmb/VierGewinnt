<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" BorderBrush="Black" BorderThickness="2">
                <Button x:Name="Peter" Background="White">
                </Button>
            </Border>
            <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="0" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="0" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="1" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="2" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="3" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="4" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="5" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="0" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="2" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="3" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="4" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Grid.Column="6" Grid.Row="5" BorderBrush="Black" BorderThickness="2"></Border>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <ComboBox x:Name="combobox_sp1" Margin="10" ItemsSource="{Binding Path=LSTSpieler}"></ComboBox>
            <ComboBox x:Name="combobox_sp2" Grid.Row="1" Margin="10" ItemsSource="{Binding Path=LSTSpieler}"></ComboBox>
            <TextBox x:Name="tb_name" Grid.Row="2" Margin="10"></TextBox>
            <Button x:Name="button_aufnehmen" Grid.Row="3" Content="Spieler aufnehmen" Margin="10"></Button>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
           </Grid.RowDefinitions>
            <Button x:Name="button_start" Content="Spiel starten" Grid.ColumnSpan="4" FontSize="60"></Button>
            <Label Grid.Row="1" Content="Spieler 1:" FontSize="29" Margin="20"></Label>
            <TextBox x:Name="tb_sp1" Grid.Row="1" Grid.Column="1" Margin="20"></TextBox>
            <Label Grid.Row="1" Grid.Column="2" Content="Spieler 2:" FontSize="29" Margin="20"></Label>
            <TextBox x:Name="tb_sp2" Grid.Row="1" Grid.Column="3" Margin="20"></TextBox>
            <Label Grid.Row="2" Content="Punkte:" FontSize="29" Margin="20"></Label>
            <TextBox x:Name="tb_punkteSp1" Grid.Row="2" Grid.Column="1" Margin="20"></TextBox>
            <Label Grid.Row="2" Grid.Column="2" Content="Punkte:" Margin="20" FontSize="29"></Label>
            <TextBox x:Name="tb_punkteSp2" Grid.Row="2" Grid.Column="3" Margin="20"></TextBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Bestenliste"  FontSize="50" Margin="30,0,0,0"></Label>
            <TextBlock x:Name="tblock_best" Grid.Row="1"></TextBlock>
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="10"></Border>
        </Grid>
    </Grid>
</Window>
